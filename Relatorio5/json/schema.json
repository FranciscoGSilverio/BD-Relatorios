{
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "titulo",
        "autor",
        "ano",
        "preco"
      ],
      "properties": {
        "titulo": {
          "bsonType": "string",
          "description": "título obrigatório"
        },
        "autor": {
          "bsonType": "string",
          "description": "autor obrigatório"
        },
        "ano": {
          "bsonType": "int",
          "minimum": 1850,
          "maximum": 2024,
          "description": "ano obrigatório e deve ser um inteiro entre 1850 e 2024"
        },
        "preco": {
          "bsonType": "double",
          "description": "preço obrigatório"
        }
      }
    }
  }